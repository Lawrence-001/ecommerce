@model CartVM
@{
    ViewBag.Title = "Cart details";
}
<h3 class="text-center">Cart details</h3>

<div class="row">
    <div class=" container-fluid col-lg-6 col-md-7">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th> Quantity</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th class="col-3"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cart.CartItems)
                {
                    <tr>
                        <td class="align-middle">@item.Quantity</td>
                        <td class="align-middle"> @item.Product.Name</td>
                        <td class="align-middle">@item.Product.Cost</td>
                        <td class="align-middle">@(item.Quantity*item.Product.Cost)</td>
                        <td class="align-middle">
                            <a asp-action="RemoveFromCart" asp-controller="cart" asp-route-id="@item.Product.ProductId" class="btn btn-outline-danger">
                                <i class="bi bi-dash"></i>
                            </a> |
                            <a asp-action="AddToCart" asp-controller="cart" asp-route-id="@item.Product.ProductId"
                           class="btn btn-outline-success"> <i class="bi bi-plus"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td><b>Total: </b></td>
                    <td>
                        @Model.CartTotal
                    </td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        <div class="text-center">
            <a asp-action="index" asp-controller="home" class="btn btn-outline-primary">Continue shopping</a>
        </div>
    </div>

</div>